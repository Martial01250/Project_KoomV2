{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
        <div class="col-12">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="mainTopPadding bgc">
                    <img class="registerImg" src="{{ asset('build/img/teamwork-2.bbfe5849.png') }}"
                         alt="image teamwork">
                </div>
                <div class="bgc mainTopPadding d-flex flex-column justify-content-cente align-items-center">
                    <div class="container-fluid d-flex justify-content-center">
                        <div class="col-12 col-xl-6 formRegister mb-5">

                            <h1 class="h3 mb-3 font-weight-normal text-center">S'identifier</h1>

                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control" autocomplete="email" required autofocus>
                            <label class="mt-4" for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="checkbox mt-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <div class="col-12 d-flex justify-content-center">
                                <button class="btn btn-lg btn-primary mt-4" type="submit">
                                    Se connecter
                                </button>
                            </div>

                        </div>
            </form>
        </div>
    </div>
{% endblock %}
